<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#000"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp">

    <com.realgear.readable_bottom_bar.ReadableBottomBar
        android:id="@+id/navigatonBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFF"
        android:clickable="true"
        app:rbb_indicatorAppearance="round"
        app:rbb_selectedTabType="text"
        app:rbb_indicatorHeight="4dp"
        app:rbb_indicatorColor="#448aff"
        app:rbb_tabColorSelected="#448aff"
        app:rbb_tabs="@menu/navigation_bar_tabs"
        app:rbb_selectedIndex="0"
        app:rbb_tabColor="#333333"
        app:rbb_textStyle="bold"
        app:rbb_iconSize="30dp"
        app:rbb_textSize="16sp"
        app:rbb_indicatorStyle="normal"
        app:rbb_indicatorMargin="10dp"
        />
</androidx.cardview.widget.CardView>